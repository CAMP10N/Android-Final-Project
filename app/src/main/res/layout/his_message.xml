<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/chat_chat"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="15dp"
        android:text="12:23"
        android:textColor="@color/grey"/>

    <TextView
        android:id="@+id/chat_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="100dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/his_chat_border"
        android:backgroundTint="@color/light"
        android:text="asdasdasfasdfasdfasdasdasdfadfaddgasdgadgasdgdfasdfasdfaasdfasdfdfasdfdfasdfdsfasdfdasfasdffasdfasdgadfadfasdfadfadfsdfadfasdfasdfa"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="16dp"
        android:paddingHorizontal="25dp"
        android:paddingVertical="25dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>